<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#0000FF">

    <TextView
        android:id="@+id/topShit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose all Prime Factors of"
        android:textColor="#000000"
        android:textSize="50sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/currentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="100sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/topShit"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Prime Factors"
        android:layout_below="@id/currentNum"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/CurrentFactors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subtitle"
        android:text="2,2,5,5"
        android:layout_margin="20dp"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/subsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Prime Factor"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_below="@id/CurrentFactors"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subsub">
        <Button
            android:id="@+id/Prime1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="2"/>
        <Button
            android:id="@+id/Prime2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/Prime1"
            android:text="3"/>
        <Button
            android:id="@+id/Prime3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/Prime2"
            android:text="5"/>
        <Button
            android:id="@+id/Prime4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/Prime3"
            android:text="7"/>
        <Button
            android:id="@+id/minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:layout_below="@id/Prime1"/>
        <Button
            android:id="@+id/Prime5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/minus"
            android:layout_below="@id/Prime2"
            android:text="11"
            />
        <Button
            android:id="@+id/Prime6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/Prime5"
            android:layout_below="@id/Prime3"
            android:text="13"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/Prime3"
            android:layout_below="@id/Prime4"
            android:text="+"/>
    </RelativeLayout>

</RelativeLayout>
